    h /= 3;
    if (h < 1) 
      break;
    for ()

  }
}

void verify(int x[], int n)
{
  int i;
  for (i = 0; i <= n - 2; i++)
    assert(x[i] <= x[i + 1]);
}

void test_selection_sort()
{
  int x[] = {8, 1, 2, 6, 5, 3};
  int n = 6;
  selection_sort(x, 6);
  verify(x, 6);
}

